# ====================
# MySQL 数据库配置
# ====================
# 重要：MYSQL_PASSWORD 必须配置，禁止使用默认密码
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=你的MySQL密码
MYSQL_DB=BaiduIndexHunter

# ====================
# Redis 配置
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ====================
# Flask 应用配置
# ====================
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# ====================
# API 配置
# ====================
# 重要：API_SECRET_KEY 必须配置且足够复杂，禁止使用默认密钥
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=True
API_SECRET_KEY=请修改为随机生成的复杂密钥
API_TOKEN_EXPIRE=86400
API_CORS_ORIGINS=*

# ====================
# 任务配置
# ====================
MAX_CONCURRENT_TASKS=20
TASK_QUEUE_CHECK_INTERVAL=5
DEFAULT_TASK_PRIORITY=5
MAX_RETRY_COUNT=3
RETRY_DELAY=120

# ====================
# 登录和健康检查配置
# ====================
LOGIN_INTERVAL=86400
HEALTH_CHECK_INTERVAL=3600

# ====================
# Cookie 检查配置
# ====================
COOKIE_CHECK_INTERVAL=180
AB_SR_UPDATE_INTERVAL=3600
RESUME_TASK_CHECK_INTERVAL=300

# ====================
# Cookie 管理配置
# ====================
COOKIE_MIN_AVAILABLE_COUNT=10
COOKIE_MAX_LOGIN_RETRY=2
COOKIE_BLOCK_COOLDOWN=1800
COOKIE_EXPIRATION_BUFFER=3600
COOKIE_ROTATION_STRATEGY=round_robin
COOKIE_MAX_USAGE_PER_DAY=1800

# ====================
# 爬虫配置
# ====================
SPIDER_MIN_INTERVAL=0.1
SPIDER_MAX_INTERVAL=0.3
SPIDER_DEFAULT_INTERVAL=0.2
SPIDER_RETRY_TIMES=2
SPIDER_TIMEOUT=10
SPIDER_MAX_WORKERS=20
SPIDER_MAX_CONSECUTIVE_FAILURES=2
SPIDER_FAILURE_MULTIPLIER=1.1
SPIDER_USER_AGENT_ROTATION=True
SPIDER_PROXY_ENABLED=False
SPIDER_PROXY_URL=
SPIDER_PROXY_AUTH=

# ====================
# 日志配置
# ====================
LOG_LEVEL=INFO
LOG_RETENTION=7
LOG_FORMAT=%(asctime)s - %(levelname)s - %(name)s - %(message)s
LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# ====================
# 输出配置
# ====================
OUTPUT_DEFAULT_FORMAT=csv
OUTPUT_CSV_ENCODING=utf-8-sig
OUTPUT_EXCEL_SHEET_NAME=BaiduIndex
OUTPUT_FILE_NAME_TEMPLATE={task_type}_{timestamp}
OUTPUT_DIR=./output

# ====================
# 阿里云OSS配置 (可选)
# ====================
OSS_URL=
OSS_ENDPOINT=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET_NAME=
OSS_REGION=
