# ====================
# MySQL 数据库配置
# ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=你的MySQL密码
MYSQL_DB=BaiduIndexHunter

# ====================
# Redis 配置
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ====================
# Flask 应用配置
# ====================
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# ====================
# API 配置
# ====================
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=True
API_SECRET_KEY=baidu_index_hunter_secret_key_请修改此密钥
API_TOKEN_EXPIRE=86400
API_CORS_ORIGINS=*

# ====================
# 任务配置
# ====================
MAX_CONCURRENT_TASKS=20
TASK_QUEUE_CHECK_INTERVAL=5
DEFAULT_TASK_PRIORITY=5
MAX_RETRY_COUNT=3
RETRY_DELAY=120

# ====================
# 登录和健康检查配置
# ====================
LOGIN_INTERVAL=86400
HEALTH_CHECK_INTERVAL=3600

# ====================
# Cookie 检查配置
# ====================
COOKIE_CHECK_INTERVAL=180
AB_SR_UPDATE_INTERVAL=3600
RESUME_TASK_CHECK_INTERVAL=300

# ====================
# Cookie 管理配置
# ====================
COOKIE_MIN_AVAILABLE_COUNT=10
COOKIE_MAX_LOGIN_RETRY=2
COOKIE_BLOCK_COOLDOWN=1800
COOKIE_EXPIRATION_BUFFER=3600
COOKIE_ROTATION_STRATEGY=round_robin
COOKIE_MAX_USAGE_PER_DAY=1800

# ====================
# Scrapy 爬虫配置
# ====================
# 全局并发请求数
SPIDER_MAX_WORKERS=16
# 每域名并发请求数
SPIDER_CONCURRENT_PER_DOMAIN=8
# 请求间隔（秒）
SPIDER_DEFAULT_INTERVAL=0.3
# 请求超时（秒）
SPIDER_TIMEOUT=30
# 失败重试次数
SPIDER_RETRY_TIMES=3
# 是否启用代理
SPIDER_PROXY_ENABLED=False
SPIDER_PROXY_URL=
SPIDER_PROXY_AUTH=

# ====================
# 日志配置
# ====================
LOG_LEVEL=INFO
LOG_RETENTION=7
LOG_FORMAT=%(asctime)s - %(levelname)s - %(name)s - %(message)s
LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# ====================
# 输出配置
# ====================
OUTPUT_DEFAULT_FORMAT=csv
OUTPUT_CSV_ENCODING=utf-8-sig
OUTPUT_EXCEL_SHEET_NAME=BaiduIndex
OUTPUT_FILE_NAME_TEMPLATE={task_type}_{timestamp}
OUTPUT_DIR=./output

# ====================
# 阿里云OSS配置 (可选)
# ====================
OSS_URL=
OSS_ENDPOINT=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET_NAME=
OSS_REGION=
